# ============================================
# CONFIGURACIÓN DE LA API AGRO GEMINI
# ============================================

# ---------------------------------------------
# 1. API KEY DE GOOGLE GEMINI (REQUERIDA)
# ---------------------------------------------
# Obtén tu clave en: https://ai.google.dev/
# Sin esta clave, la API funcionará en MODO DEMO (respuestas simuladas)
GEMINI_API_KEY=

# ---------------------------------------------
# 2. MODO DE OPERACIÓN
# ---------------------------------------------
# true = Modo demo (respuestas simuladas, no requiere API key)
# false = Modo real (usa Google Gemini, requiere API key)
MOCK_MODE=true

# ---------------------------------------------
# 3. MODELO DE GEMINI
# ---------------------------------------------
# Opciones recomendadas:
# - gemini-2.5-flash (rápido, recomendado)
# - gemini-1.5-pro-latest (más potente, más lento)
# - gemini-1.5-flash-latest (balance)
MODEL=gemini-2.5-flash

# ---------------------------------------------
# 4. HISTORIAL DE CONVERSACIONES
# ---------------------------------------------
# true = Habilitar historial con SQLite (solo para LOCAL)
# false = Deshabilitar historial (REQUERIDO para Vercel/serverless)
#
# ⚠️ IMPORTANTE: 
# - Local: usar true (funciona con SQLite)
# - Vercel: usar false (SQLite no funciona en serverless)
ENABLE_HISTORY=true

# ---------------------------------------------
# 5. CONFIGURACIÓN AVANZADA (Opcional)
# ---------------------------------------------

# Timeout en segundos para llamadas a Gemini
TIMEOUT_S=30

# Máximo de caracteres permitidos en input
MAX_INPUT_CHARS=12000

# Nivel de logging: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============================================
# EJEMPLOS DE CONFIGURACIÓN
# ============================================

# --- DESARROLLO LOCAL (con historial) ---
# GEMINI_API_KEY=AIza...tu_clave
# MOCK_MODE=false
# ENABLE_HISTORY=true
# MODEL=gemini-2.5-flash

# --- MODO DEMO (sin API key) ---
# GEMINI_API_KEY=
# MOCK_MODE=true
# ENABLE_HISTORY=true
# MODEL=gemini-2.5-flash

# --- VERCEL PRODUCCIÓN (sin historial) ---
# GEMINI_API_KEY=AIza...tu_clave
# MOCK_MODE=false
# ENABLE_HISTORY=false
# MODEL=gemini-2.5-flash

